doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/layout.css")
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css",
      rel="stylesheet",
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65",
      crossorigin="anonymous"
    )
    if currentUser === undefined || currentUser.membershipStatus === "regular"
      link(rel="icon", href="/images/locked.png")
    else 
      link(rel="icon", href="/images/unlocked.png")
    script(src="https://kit.fontawesome.com/b3134d01ff.js" crossorigin="anonymous")
    title= title
  body 
    |
    header
      h1
        a(href="/") 
          if currentUser === undefined || currentUser.membershipStatus === "regular"
            img(src="/images/locked.png", alt="members only")
          else 
            img(src="/images/unlocked.png", alt="members only")
          |Members only
      ul 
        if currentUser !== undefined
          |
          li
            a.button(href="/message/create") 
              i.fa-solid.fa-message.fa-xs
              |Create message
          if currentUser.membershipStatus === "regular"
            li
              a.button(href="/user/change-member") 
                i.fa-solid.fa-unlock.fa-xs
                |Make member
          if currentUser.membershipStatus === "member"
            li
              a.button(href="/user/make-admin") 
                i.fa-solid.fa-unlock.fa-xs
                |Make Admin
          li
            a.button(href="/user/log-out") 
              i.fa-solid.fa-right-from-bracket.fa-xs
              |Log Out
        else
          li
            a.button(href="/user/sign-up") 
              i.fa-solid.fa-user-plus.fa-xs
              |Sign Up
          li 
            |
            a.button(href="/user/log-in") 
              i.fa-solid.fa-right-to-bracket.fa-xs
              | Log In

    main 
      block content

    footer
      h1 Hector Gonz√°lez Orozco
      a(href="https://github.com/hectorgonzalezo/members-only") 
        |
        |
        |
        img(src="/images/github-logo.png", alt="Github")
