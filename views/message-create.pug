extends layout 

block content
  form(action="" method="POST") 
    h1= title
    .input_wrapper
      label.form-label(for="title") Title:
      input#title.form-control.form-control-sm(
        type="text",
        name="title",
        minlength="1",
        maxlength="50",
        placeholder="Message title",
        required
      )
    .input_wrapper
      label.form-label(for="message") Message:
      textarea#message.form-control.form-control-sm(
        type="text",
        name="message",
        minlength="1",
        rows="5"
        required
      )
    button(type="submit") Create Message

    if errors 
      ul
        each error in errors
          li= error.msg