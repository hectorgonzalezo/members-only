extends layout

block content
  if currentUser !== undefined
    if currentUser.membershipStatus === "regular"
      h2 Welcome back #{currentUser.firstName}
    else 
      h2 Welcome <em>member</em> #{currentUser.firstName}
  else
    h2 Welcome to #{ title }
  if messages
    .messages 
      each message in messages 
        .message
          h1= message.title 
          p= message.text 
          if currentUser !== undefined && currentUser.membershipStatus !== "regular"
            p.info #{message.formattedTimeStamp} by <i>#{message.poster.username}</i>
